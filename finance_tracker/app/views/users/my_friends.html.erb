

<div class="container">
<div class="row">

<div class="col-9 friendship">
 <h2>Friends</h2>
 <div class="search-area">
<h3 >Search Friend</h3>
<%=form_tag  search_friend_path ,remote:true, method: :get do%>
<div class="form-group row">
    <div class="col-sm-9 no-right-padding">
    <%= text_field_tag :friend , params[:friend] ,placeholder:"search you friend",autofocus: true , class: "form-control  form-contol-lg" %>
    </div>
    <div class="col-sm-3 no-left-padding">
     <%= button_tag type: :submit ,class:'btn btn-success' do%>

         <%= fa_icon 'search'%>
     <%end%>
    </div>
</div>
<%end%>
</div>
<div id="friendresults">
<div>
 <%= render 'friends/friendlist'%>
 </div>
 </div>
 </div>